@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="container-fluid" style="max-width: 1120px;">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="width: 10%">@Html.DisplayNameFor(m => m.Logo)</th>
                <th scope="col" style="width: 15%">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col" style="width: 65%">@Html.DisplayNameFor(m => m.Description)</th>
                <th scope="col" style="width: 10%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td class="text-center align-middle">
                        <img class="rounded" src="@cinema.Logo" alt="@cinema.Name" style="max-width:100px" />
                    </td>
                    <td class="align-middle">@cinema.Name</td>
                    <td class="align-middle"><p align="justify">@cinema.Description</p></td>
                    <td>
                        <div class="d-flex flex-column justify-content-between align-items-center" style="width:auto; height: auto; margin: 0 auto;">
                            <a class="btn btn-primary btn-sm col-11 mb-1" asp-action="Edit" asp-route-id="@cinema.Id"><i class="bi bi-pencil-square"> Edit</i></a>
                            <a class="btn btn-info btn-sm col-11 mb-1" asp-action="Details" asp-route-id="@cinema.Id"><i class="bi bi-eye"> Details</i></a>
                            <a class="btn btn-danger btn-sm col-11" asp-action="Delete" asp-route-id="@cinema.Id"><i class="bi bi-trash"> Delete</i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-end align-items-lg-end text-white mb-4" style="position: fixed; right: 20px; bottom: 15px;">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>